<h1> Edit a job </h1>
<%# render partial: "common/banner", locals: {content: "我是廣告的內容"} %>

<%= render partial: 'common/formerror', locals: {content: @job }%>
<%= simple_form_for [:admin, @job ] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
<% end %>
